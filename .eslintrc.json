{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": [2, "always"],
        "no-console": "error",
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "max-len": ["error", {
            "code": 115,
            "ignoreComments": true,
            "ignoreRegExpLiterals": true
        }],
        "newline-before-return": "error"
    }
}
